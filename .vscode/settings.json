{
  "editor.formatOnSave": true,
  "pylint.enabled": true,
  "workbench.colorCustomizations": {
    "activityBar.activeBorder": "#44ff00",
    "activityBar.border": "#44ff00",
    "activityBarTop.activeBackground": "#44ff00",
    "activityBarTop.activeBorder": "#44ff00",
    "activityBarTop.foreground": "#44ff00",
    "activityBar.activeFocusBorder": "#44ff00",
    "activityBarTop.inactiveForeground": "#44ff00",
    "activityBarTop.dropBorder": "#44ff00",
    "tab.activeBorderTop": "#44ff00",
    "tab.border": "#44ff00",
    "panel.border": "#44ff00",
    "editorGroupHeader.border": "#44ff00",
    "scrollbarSlider.background": "#44ff0040",
    "scrollbarSlider.activeBackground": "#44ff00cc",
    "scrollbar.shadow": "#44ff006e"
  },
  
  "editor.scrollbar.verticalScrollbarSize": 7,
  "editor.scrollbar.horizontalScrollbarSize": 7,
  
  "ruff.organizeImports": true,
  "ruff.fixAll": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit"
  },
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.ruff": "explicit",
      "source.organizeImports.ruff": "explicit"
    }
  },
  "python.testing.pytestArgs": [
    "app", "-s"
  ],
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true
}